{
  "extends": "expo/tsconfig.base",
  "compilerOptions": {
    "strict": true,
    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"]
    },
    "types": ["react-native"],
    "allowJs": true,
    "esModuleInterop": true,
    "jsx": "react-native",
    "lib":["DOM", "ESNext"],
    "moduleResolution": "node",
    "noEmit": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "skipLibCheck": true,
    "target": "esnext",
  },
  "exclude": [
    "node_modules",
    "babel.config.js",
  ]
}
